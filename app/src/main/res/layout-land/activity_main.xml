<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/android_studio_logo"
            />

        <ImageView
            android:id="@+id/star"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="45dp"
            android:src="@mipmap/star"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <ImageView
            android:id="@+id/phone"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/phone_receiver"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="@id/logo"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            />

        <TextView
            android:id="@+id/phone_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_650_555_1234"
            android:textSize="30sp"
            android:layout_below="@id/logo"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="@id/logo"
            android:layout_marginStart="170dp"
            android:layout_marginTop="55dp"
            />

        <TextView
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/google_voice"
            app:layout_constraintTop_toBottomOf="@id/phone_number1"
            app:layout_constraintLeft_toLeftOf="@id/logo"
            android:layout_marginStart="170dp"
            android:textSize="25sp"
            />

        <ImageView
            android:id="@+id/chat1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/chat"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toRightOf="@id/phone_number1"
            android:layout_marginStart="80dp"
            android:layout_marginTop="55dp"
            />

        <TextView
            android:id="@+id/phone_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_650_555_1234"
            android:textSize="30sp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/google"
            app:layout_constraintLeft_toLeftOf="@id/logo"
            android:layout_marginStart="170dp"
            android:layout_marginTop="35dp"
            />

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile"
            app:layout_constraintTop_toBottomOf="@id/phone_number2"
            app:layout_constraintLeft_toLeftOf="@id/logo"
            android:layout_marginStart="170dp"
            android:textSize="25sp"
            />

        <ImageView
            android:id="@+id/chat2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/chat"
            app:layout_constraintTop_toBottomOf="@id/chat1"
            app:layout_constraintLeft_toRightOf="@id/phone_number1"
            android:layout_marginStart="80dp"
            android:layout_marginTop="35dp"
            />

        <TextView
            android:id="@+id/hr"
            android:layout_width="500dp"
            android:layout_height="7dp"
            android:background="#999"
            app:layout_constraintTop_toBottomOf="@id/mobile"
            app:layout_constraintLeft_toLeftOf="@id/logo"
            android:layout_marginStart="70dp"
            android:layout_marginTop="35dp"
            />

        <ImageView
            android:id="@+id/mail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/mail"
            app:layout_constraintTop_toBottomOf="@id/hr"
            app:layout_constraintLeft_toLeftOf="@id/logo"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/mail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/studio_android_com"
            android:textSize="30sp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/hr"
            app:layout_constraintLeft_toLeftOf="@id/mail"
            android:layout_marginStart="120dp"
            android:layout_marginTop="45dp"
            />

        <TextView
            android:id="@+id/work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/work"
            app:layout_constraintTop_toBottomOf="@id/mail_address"
            app:layout_constraintLeft_toLeftOf="@id/mail"
            android:layout_marginStart="120dp"
            android:textSize="25sp"
            />
    </android.support.constraint.ConstraintLayout>
</ScrollView>